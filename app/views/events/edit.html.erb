<h1>
  <%= @event.name %>
</h1>
<%= form_with(model: @event) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name%>
  
  <%= f.label :description %>
  <%= f.text_area :description, rows: 5 %>
  
  <%= f.label :locatigon %>
  <%= f.text_field :locatigon %>
  
  <%= f.label :price %>
  <%= f.number_field :price %>
  
  <%= f.label :starts_at %>
  <%= f.datetime_select :starts_at, {ampm: true}, {class: "datetime"} %>
  
  <%= f.submit%>
<% end %>
