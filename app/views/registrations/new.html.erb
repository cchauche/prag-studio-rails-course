<h1>Registrations for <%= link_to @event.name, event_path(@event) %></h1>
<%= form_with(model: [@event, @registration]) do |f| %>
  <%= render "shared/errors", object: @registration %>
  <%= f.label :how_heard %>
  <%= f.select :how_heard, Registration::HOW_HEARD_OPTIONS, prompt: "Pick one" %>
  <%= f.submit%>
<% end %>